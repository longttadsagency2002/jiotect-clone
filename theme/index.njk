{% import "macros/langSwitcher.njk" as langSwitch %}
{% import "macros/elements/textarea.njk" as textarea %}

<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
<!-- Mô tả trang để SEO -->
<meta name="description" content="Mô tả ngắn gọn về nội dung trang web của bạn">

<!-- Từ khóa SEO (ít dùng nữa, nhưng vẫn có thể thêm) -->
<meta name="keywords" content="từ khóa, liên quan, đến, trang, web">

<!-- Tác giả trang -->
<meta name="author" content="Tên tác giả hoặc tổ chức">

<!-- Thiết lập X-UA-Compatible cho IE -->
<meta http-equiv="X-UA-Compatible" content="IE=edge">

<!-- Đặt màu thanh trình duyệt trên mobile (Chrome, Safari) -->
<meta name="theme-color" content="#317EFB">

<!-- Đặt robots để điều khiển việc index -->
<meta name="robots" content="index, follow">


  <title>{{ t[key].title }}</title>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/7.3.2/css/flag-icons.min.css" integrity="sha512-+WVTaUIzUw5LFzqIqXOT3JVAc5SrMuvHm230I9QAZa6s+QRk8NDPswbHo2miIZj3yiFyV9lAgzO1wVrjdoO4tw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- FontAwesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

  {# <script src="https://cdn.ckeditor.com/4.21.0/full-all/ckeditor.js"></script> #}
  <script src="/assets/libs/ckeditor/ckeditor.js"></script>


 <!-- Optional: Your custom CSS -->
  <link href="/assets/css/styles.css" rel="stylesheet" />
</head>
<body>
  <header class="container my-4">
    <h1>{{ t[key].heading }}</h1>
    <nav>
 
    <a href="{{ i18nUrl('about', lang) }}">{{ t.common.about }}</a>
    <a href="{{ i18nUrl('login', lang) }}">{{ t.common.login }}</a>

    {{ langSwitch.langSwitcher(currentUrl, lang) }}


    </nav>
  </header>

  <main class="container">
    {% include contentView %}
    {{ textarea.textarea() }}
    {{ textarea.textarea(id='simpleEditor', cols=80, rows=10, placeholder='Nhập nội dung...') }}
  </main>

  <footer class="container mt-5 mb-3 text-muted text-center">
    {{ t.common.footer }}
  </footer>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

  <!-- Bootstrap Bundle JS (includes Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Optional: Your custom JS -->
  <script src="/assets/js/scripts.js"></script>
</body>
</html>
