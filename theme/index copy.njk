{% import "macros/url.njk" as urlHelper %}

<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ t[key].title }}</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- FontAwesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

  <!-- Optional: Your custom CSS -->
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
  <header class="container my-4">
    <h1>{{ t[key].heading }}</h1>
    <nav>
      <a href="{{ urlHelper.i18nUrl('/login') }}">Login</a> |
      <a href="{{ urlHelper.i18nUrl('/about') }}">About</a>
      <a href="{{ i18nUrl('/about', lang) }}">Giới thiệu</a>
<a href="{{ i18nUrl('/login', lang) }}">Đăng nhập</a>

    </nav>
  </header>

  <main class="container">
    {% include contentView %}
  </main>

  <footer class="container mt-5 mb-3 text-muted text-center">
    {{ t.common.footer }}
  </footer>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

  <!-- Bootstrap Bundle JS (includes Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Optional: Your custom JS -->
  <script src="/js/scripts.js"></script>
</body>
</html>
